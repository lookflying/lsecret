<h1>Listing records</h1>

<table>
  <tr>
    <th>Day</th>
    <th>Item</th>
    <th>Expense</th>
    <th>Income</th>
    <th>Tag</th>
    <th>Remark</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @records.each do |record| %>
  <tr>
    <td><%= record.day %></td>
    <td><%= record.item %></td>
    <td><%= record.expense %></td>
    <td><%= record.income %></td>
    <td><%= record.tag %></td>
    <td><%= record.remark %></td>
    <td><%= link_to 'Show', record %></td>
    <td><%= link_to 'Edit', edit_record_path(record) %></td>
    <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

