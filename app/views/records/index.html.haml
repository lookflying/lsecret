%h1 L(ittle) Secret

- if !@records.empty? && user_signed_in?
  %table
    %tr
      %th Expense
      %th Income
      %th Balance
    %tr
      %td= @expense
      %td= @income
      %td= @balance
= link_to 'New Record', new_record_path
%table
  %tr
    %th= link_to "Day", records_path(:order => :day)
    %th= link_to "Item", records_path(:order => :item)
    %th= link_to "Expense", records_path(:order => :expense)
    %th= link_to "Income", records_path(:order => :income)
    %th= link_to "Tag", records_path(:order => :tag)
    %th= link_to "Remark", records_path(:order => :remark)
    %th
    %th
    %th
  - if !user_signed_in?
    - mask(@records)
  - @records.each do |record|
    %tr
      %td= record.day
      %td= record.item
      %td= record.expense
      %td= record.income
      %td= record.tag
      %td= record.remark
      %td= link_to 'Show', record
      %td= link_to 'Edit', edit_record_path(record)
      %td= link_to 'Destroy', record, :confirm => 'Are you sure?', :method => :delete
%br

= link_to 'New Record', new_record_path
